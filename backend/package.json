		"db:studio": "drizzle-kit studio",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"hono": "^4.6.14",
		"@hono/zod-validator": "^0.4.1",
		"drizzle-orm": "^0.36.4",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250115.0",
		"drizzle-kit": "^0.30.2",
		"typescript": "^5.7.2",
		"wrangler": "^3.99.0"
	}
}
